<div class="container py-4 my-4">
    <div class="row mb-4">
         
        <div class="col">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                  <li class="breadcrumb-item active" aria-current="page"><%= notion.title%></li>
                </ol>
            </nav>
        </div>
        <div class="col text-end">
            <h3 class="text-center text-success">View Notion</h3>
        </div>
    </div>

    <form action="/dashboard/update/<%= notionId%>" method="post" class="position-relative form-control">
        <div class="form-group mb-4">
            <input value="<%= notion.title%>" type="text" class="form-control" name="title" id="title" placeholder="Title" required>
        </div>
        <div class="form-group mb-4">
            <textarea  type="text"  name="body" id="" placeholder="Text something" cols="30" rows="12" required class="form-control"><%= notion.body%></textarea>
        </div>
        <div class="form-group mb-4">
            
            <button class="btn btn-primary">Update Notion</button>
            <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#myModal">Delete</a>
        </div>
        

        <div class="modal" id="myModal" tabindex="-1">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Are you sure to delete this notion</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                  <a href="/dashboard/delete/<%= notionId%>" type="button" class="btn btn-primary">Yes</a>
                </div>
              </div>
            </div>
          </div>
    </form>

</div>
